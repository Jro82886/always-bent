# Always Bent Fishing Intelligence - Environment Variables
# Copy this file to .env.local and fill in your values
# Last updated: September 17, 2025

# ==========================================
# REQUIRED - Core Services
# ==========================================

# Mapbox - Interactive maps (Required)
# Get your token at: https://account.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.eyJ1IjoiYWx3YXlzYmVudCIsImEiOiJjbTFvMHo5b2cwMWRnMnFyMGJhcjBpZm5vZyJ9.your_token_here

# Supabase - Database & Auth (Required)
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_key_here
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# ==========================================
# REQUIRED - Ocean Data Services
# ==========================================

# Copernicus Marine Service (CMEMS) - SST/CHL data (Required)
# Register at: https://marine.copernicus.eu/
COPERNICUS_USER=your_username
COPERNICUS_PASS=your_password

# WMTS Templates for Ocean Data (Required)
# SST (Sea Surface Temperature)
NEXT_PUBLIC_SST_WMTS_TEMPLATE=https://wmts.marine.copernicus.eu/teroWmts/GLOBAL_ANALYSISFORECAST_PHY_001_024/dataset-duacs-nrt-global-merged-allsat-phy-l4/{z}/{x}/{y}.png
CMEMS_SST_WMTS_TEMPLATE=https://wmts.marine.copernicus.eu/teroWmts/GLOBAL_ANALYSISFORECAST_PHY_001_024/cmems_obs-sl_glo_phy-ssh_nrt_allsat-l4-duacs-0.25deg_P1D/{z}/{x}/{y}.png

# CHL (Chlorophyll)
NEXT_PUBLIC_CHL_WMTS_TEMPLATE=https://wmts.marine.copernicus.eu/teroWmts/OCEANCOLOUR_GLO_BGC_L4_NRT_009_102/cmems_obs-oc_glo_bgc-plankton_nrt_l4-multi-4km_P1D/{z}/{x}/{y}.png
CMEMS_CHL_WMTS_TEMPLATE=https://wmts.marine.copernicus.eu/teroWmts/OCEANCOLOUR_GLO_BGC_L4_NRT_009_102/cmems_obs-oc_glo_bgc-plankton_nrt_l4-multi-4km_P1D/{z}/{x}/{y}.png

# Copernicus WMTS Configuration (Required)
COPERNICUS_WMTS_BASE=https://wmts.marine.copernicus.eu/teroWmts
COPERNICUS_WMTS_LAYER=GLOBAL_ANALYSISFORECAST_PHY_001_024/cmems_mod_glo_phy-thetao_anfc_0.083deg_P1D-m
COPERNICUS_WMTS_SLA_LAYER=SEALEVEL_GLO_PHY_L4_NRT_008_046/cmems_obs-sl_glo_phy-ssh_nrt_allsat-l4-duacs-0.25deg_P1D
COPERNICUS_WMTS_THERMO_LAYER=GLOBAL_ANALYSISFORECAST_PHY_001_024/cmems_mod_glo_phy-so_anfc_0.083deg_P1D-m
COPERNICUS_WMTS_STYLE=cmap:RdBu_r,min:15,max:30
COPERNICUS_WMTS_FORMAT=image/png
COPERNICUS_WMTS_MATRIXSET=EPSG:3857

# ==========================================
# REQUIRED - Edge Detection Service
# ==========================================

# Polygons Backend - SST edge detection (Required)
# This is your Python service endpoint
POLYGONS_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_POLYGONS_URL=http://localhost:8000
POLYGONS_BBOX_BUFFER_DEG=0.5

# Public Tile URLs (Required for client-side access)
NEXT_PUBLIC_SST_TILES_URL=https://your-cdn.com/sst-tiles
NEXT_PUBLIC_CHL_TILES_URL=https://your-cdn.com/chl-tiles

# ==========================================
# OPTIONAL - Git Configuration
# ==========================================

# Git author info (Optional - for automated commits)
GIT_AUTHOR_NAME=Always Bent Bot
GIT_AUTHOR_EMAIL=bot@alwaysbent.com
GIT_COMMITTER_NAME=Always Bent Bot
GIT_COMMITTER_EMAIL=bot@alwaysbent.com

# ==========================================
# NOTES
# ==========================================

# 1. NEVER commit .env or .env.local files
# 2. Keep production credentials secure
# 3. Use different credentials for dev/staging/production
# 4. Rotate keys regularly
