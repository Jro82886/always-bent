# Client-side feature flags (safe to expose)
NEXT_PUBLIC_CHAT_MOCK=0        # 0=use Supabase, 1=use mock data for chat
NEXT_PUBLIC_REPORTS_MOCK=0     # 0=use Supabase, 1=use mock data for reports highlights

# Optional client flags
# NEXT_PUBLIC_TRENDS_MOCK=0    # Future: mock trends data

# Server-side secrets (required for production)
# Copernicus WMTS authentication
COPERNICUS_USER=               # Your Copernicus Marine username
COPERNICUS_PASS=               # Your Copernicus Marine password

# External APIs
STORMGLASS_API_KEY=            # Stormglass API key for weather/tides

# Supabase (required for chat, reports, snips)
NEXT_PUBLIC_SUPABASE_URL=      # Your Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY= # Your Supabase anon/public key
SUPABASE_SERVICE_ROLE_KEY=     # Your Supabase service role key (server-side only)

# Database
DATABASE_URL=                  # PostgreSQL connection string

# Map services
NEXT_PUBLIC_MAPBOX_TOKEN=      # Mapbox GL JS access token

# Optional: Advanced configuration
# NEXT_PUBLIC_SST_TILES_URL=   # Custom SST tile server URL
# NEXT_PUBLIC_CHL_TILES_URL=   # Custom CHL tile server URL

# Demo mode settings
NEXT_PUBLIC_DEMO_FORCE_INLET=1       # 1=always use default inlet, 0=normal inlet selection
NEXT_PUBLIC_DEMO_DEFAULT_INLET=md-ocean-city  # Default inlet slug for demo mode

# Pelagic species demo
NEXT_PUBLIC_TRENDS_PELAGIC_MOCK=1  # 1=show pelagic species (tuna, mahi), 0=show coastal species
